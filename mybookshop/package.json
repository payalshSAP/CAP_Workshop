{
  "name": "mybookshop",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^7",
    "@sap/cds-hana": "^2",
    "@sap/xssec": "^3",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^7",
    "@sap/eslint-plugin-cds": "^3",
    "@sap/ux-specification": "^1.120.14",
    "eslint": "^9",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-bookshop_ui": "cds watch --open bookshop_ui/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy mybookshop --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "[development]": {
        "auth": {
          "kind": "mocked",
          "users": {
            "user1@example.com": {
              "password": "initial",
              "ID": "user1@example.com",
              "roles": [
                "Admin"
              ],
              "attr": {
                "country": "UK"
              }
            },
            "user2@example.com": {
              "password": "initial",
              "ID": "user2@example.com",
              "roles": [
                "authenticated-user"
              ],
              "attr": {
                "country": "UK"
              }
            }
          }
        }
      },
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      }
    }
  },
  "sapux": [
    "app/bookshop_ui"
  ]
}
